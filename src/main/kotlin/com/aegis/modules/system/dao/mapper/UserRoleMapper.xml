<mapper namespace="com.aegis.modules.system.dao.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aegis.modules.system.model.entity.UserRole">
        <id column="user_role_id" property="userRoleId" />
        <result column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
        <result column="del" property="del" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        UserRole.user_role_id, UserRole.user_id, UserRole.role_id, UserRole.del
